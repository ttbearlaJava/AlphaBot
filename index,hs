  name: "eval",
  code: `
  $title[Eval]
  $description[$editIn[5s;Running :green_circle:;Stopping :orange_circle:;Stopped :red_circle:]]
  $footer[Runned by: $usertag[$authorID]]`
})

bot.command({
name: "embed",
